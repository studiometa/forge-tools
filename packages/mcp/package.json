{
  "name": "@studiometa/forge-mcp",
  "version": "0.2.5",
  "description": "MCP server for Laravel Forge â€” Model Context Protocol integration for AI agents",
  "keywords": [
    "ai",
    "claude",
    "forge",
    "laravel",
    "mcp",
    "model-context-protocol"
  ],
  "license": "MIT",
  "author": "Studio Meta",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiometa/forge-tools",
    "directory": "packages/mcp"
  },
  "bin": {
    "forge-mcp": "./dist/index.js",
    "forge-mcp-server": "./dist/server.js"
  },
  "files": [
    "dist",
    "skills"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js"
    },
    "./crypto": {
      "types": "./dist/crypto.d.ts",
      "import": "./dist/crypto.js"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "import": "./dist/http.js"
    },
    "./oauth": {
      "types": "./dist/oauth.d.ts",
      "import": "./dist/oauth.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly && node scripts/postbuild.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@studiometa/forge-api": "*",
    "@studiometa/forge-core": "*",
    "h3": "^2.0.1-rc.14"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.1.0-beta.4",
    "typescript": "^5.7.3",
    "vite": "^8.0.0-beta.14",
    "vitest": "^4.1.0-beta.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
